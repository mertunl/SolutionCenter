@using Utility.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SolutionCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SolutionCenter.styles.css" asp-append-version="true" />
    <style>
        :root {
            --purple: #6f42c1;
        }
        .purple-text{
            color : var(--purple);
        }
    </style>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <b class="purple-text" class="navbar-brand" href="#">SolitionCENTER</b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Ana Sayfa</a>
                        </li>
                        @{
                            if (User.IsInRole(Roles.User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Post" asp-controller="Post" asp-action="Index">Sorular</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Post" asp-controller="Post" asp-action="CreatePost">Soru Yayınla</a>
                                </li>
                                <li class="nav-item ml-auto">
                                    <a class="nav-link" asp-area="User" asp-controller="User" asp-action="Profile">Profil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Application" asp-controller="Application" asp-action="Index">Başvuru</a>
                                </li>
                            }
                            else if (User.IsInRole(Roles.Admin))
                            {
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Ana sayfa</a>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
        @* <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-3 bg-white" style=" margin-top: 10%">

                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white">
            @RenderSection("solmenu", false)
                    </div>
                    </div>
            </div>
        </div> *@
       @*  @if (User.IsInRole(Roles.User))
        {
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white">
                @Html.Partial("_LeftMenu")
        </div>
        } *@
    </div> 
  
    
   
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SolutionCenter - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
